FROM debian

CMD ["bash"]

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && \
  apt-get install -y --no-install-recommends unzip wget curl iotop moreutils psmisc tcpdump netcat && \
  apt-get clean && \
  rm -rf /var/lib/apt/lists/*

WORKDIR /opt

# RUN wget and download custom app/script

ENTRYPOINT ["sleep" "infinity"]
